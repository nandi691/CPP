#ifndef DASOHA_H_
#define DASOHA_H_

#include "Utility.h"

#define BOT_CFG_FILE "/home/nksys/SeaMyCode/Telegram/Diary/botconfig.cfg"


struct BotConfig
{
	std::string botID;
	std::string botToken;
	std::string msgID;
	std::string name;
};

class DasohaKartha
{
	DasohaKartha()=delete;
	DasohaKartha(const std::string &name,int date,int month ,int year,const std::string &address);
	virtual ~DasohaKartha();
	std::string m_name;
	unsigned int m_date;
	unsigned int m_month;
	unsigned int m_year;
	std::string m_address;
};

class Dasoha{
public:
	Dasoha();
	virtual ~Dasoha();
	void Init();

private:
	BotConfig *m_botCfg;
	std::string m_botData;
	std::string m_data;
	std::string m_options;
	unsigned long long m_offset;
	std::string m_senderID;
	std::string m_senderName;
	void ReadBotConfig();
	void SendToBot(std::string data);
	bool ReadData();
	void ProcessCommand();
};

