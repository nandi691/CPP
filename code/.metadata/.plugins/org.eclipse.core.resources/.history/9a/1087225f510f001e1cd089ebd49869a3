 * Inheritance
 * Polymorphism
 */

/*
 * ABSTRACTION
 * Focuses on important and necessary details
 * Unwanted features are left out
 * Helps Focus on important characteristics
 *
 */
#include "Car.h"

void Car::FillFuel(float amount){
	fuel = amount;
}

void Car::Accelerate(){
	speed++;
	fuel -= 0.5f;
}

void Car::Brake(){
	speed = 0;
}

void Car::AddPassengers(int count){
	passengers = count;
}

int Car::DashBoard(){
	return 0;
}















