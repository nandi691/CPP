#ifndef CAR_H
#define CAR_H

class Car{
private:
	float fuel{0};
	float speed{0};
	int passengers{0};
public:
	Car();
	~Car();
	Car(float amount); //Parameterized constructor
	void FillFuel(float amount);
	void Accelerate();
	void Brake();
	void AddPassengers(int count);
	void DashBoard();
};

#endif
