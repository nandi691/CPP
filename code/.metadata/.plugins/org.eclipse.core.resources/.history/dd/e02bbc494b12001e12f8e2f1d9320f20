#ifndef ROUTING_TABLE_H
#define ROUTING_TABLE_H

#include <iostream>

enum Opcodes{
	CREATE,
	UPDATE,
	DELETE
};

typedef struct RoutingTable{
	char * m_IPv4Address;
	char * m_netMask;
	char * m_gatewayIP;
	char * m_interface;
}RT;

class RoutingTable{
private:
	void AddEntry();
	void UpdateEntry();
	RT *m_RT;
public:
	void ParseEntry(int);



};
#endif
