#include <iostream>

using namespace std;

template <typename T>
T Max(T x,T y){
	cout<<typeid(T).name()<<endl;
	return x >y ? x:y;
}

template char Max(char x, char y); //Explicit instantiation

int main()
{
	//Max(3,4.3f); // We will get compilation error as it is combination of int and float
	Max(static_cast<float>(3),4.3f); //One solution of using static cast
	Max<double>(3,6.4);//Specify the type of argument
	int (*pfn)(int,int) = Max; // instantiation will happen, pfn will have address of max function

	return 0;
}
