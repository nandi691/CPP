#include "Integer.h"
#include <iostream>


Integer::Integer(){
	m_pInt = new int(0);
}

Integer::Integer(int value){
	m_pInt = new int(value);
}

Integer::~Integer(){
	delete m_pInt;
	m_pInt = NULL;
}

int Integer::GetValue() const{
	return *m_pInt;
}

void Integer::SetValue(int value){
	*m_pInt = value;
}

int main(){
	Integer i(7);
	std::cout<<i.GetValue()<<std::endl;
	return 0;
}
